{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "src\\*.cpp",
                //"src\\includes\\*.cpp",
                "src\\api\\client\\*.cpp",
                "src\\api\\util\\*.cpp",
                "src\\api\\render\\*.cpp",
                "src\\impl\\instance\\*.cpp",
                "-o",
                "build\\bicudo_64x.exe",
                "-L${workspaceFolder}\\external\\lib",
                "-I${workspaceFolder}\\src",
                "-lglew32",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-mwindows",
                "-lopengl32"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "start",
            "args": [
                "${workspaceFolder}//build//bicudo_64x.exe"
            ],
            "dependsOn": "compile"
        }
    ]
}